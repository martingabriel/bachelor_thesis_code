            </NavigationPage.Icon>
            <x:Arguments>
                <views:LectionRatingPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Nastavení">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="iOS" Value="tab_about.png" />
